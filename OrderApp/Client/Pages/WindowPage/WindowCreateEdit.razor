@page "/WindowCreateEdit"
@page "/WindowCreateEdit/{id:int}/{orderId:int}"
@inherits WindowCreateEditBase


@if (Id == null)
{
    <PageTitle>Create a new Order</PageTitle>
    <h3>Create a new Order</h3>
}
else
{
    <PageTitle>Edit Window</PageTitle>
    <h3>Edit Window</h3>
}

@if (windowDto != null)
{
    <EditForm Model="@windowDto" OnSubmit="HandleSubmit">
        <div>
            <label for="windowName">Window Name</label>
            <InputText id="windowName" @bind-Value="@windowDto.WindowName" class="form-control"></InputText>
        </div>
        <div>
            <label for="quantityOfWindows">Quantity Of Windows</label>
            <InputNumber id="quantityOfWindows" @bind-Value="@windowDto.QuantityOfWindows" class="form-control"></InputNumber>
        </div>
        <div>
            <label for="totalSubElements">Total SubElements</label>
            <InputNumber id="totalSubElements" @bind-Value="@windowDto.TotalSubElements" class="form-control"></InputNumber>
        </div>

        <div>
            <label>Order Name</label><br />
            <InputSelect @bind-Value="windowDto.OrderId" class="form-select">
                @foreach (var order in WindowService.orderListDropdown)
                {
                    <option value="@order.OrderId">@order.Name</option>
                }
            </InputSelect>
        </div>
       


        @* <div>
    <label for="orderName">Order Name</label>
    <InputText id="orderName"  @bind-Value="@windowDto.Name" class="form-control"></InputText>
    </div>*@

        <br />
        <div>
            <button type="submit" class="btn btn-primary">@btnText</button>
            <button type="button" class="btn btn-danger" @onclick="DeleteWindow">Delete Window</button>

        </div>

    </EditForm>
}

